# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /configs                    controllers.Application.getConfigList()
GET     /configs/:filename          controllers.Application.getConfig(filename : String)
POST    /configs/:filename          controllers.Application.saveConfig(filename : String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
